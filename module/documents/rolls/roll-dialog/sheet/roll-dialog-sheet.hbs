<div>
    <div>Base Formula: {{baseFormula}}</div>
    <div>Apply Kit Damage: <input class="apply-kit-damage" type="checkbox" {{#if applyKitDamage}} checked{{/if}}></div>
    
    <div class="boons-and-banes">
        <div class="boons">
            <div>Boons</div>
            <div>
                <div class="adjust-d4 subtract-d4" data-type="boons" data-adjustment="subtract"><i class="fa-solid fa-minus"></i></div>
                <div>{{boons}} <i class="fa-regular fa-dice-d4"></i></div>
                <div class="adjust-d4 add-d4" data-type="boons" data-adjustment="add"><i class="fa-solid fa-plus"></i></div>
            </div>
        </div>
        <div class="banes">
            <div>Banes</div>
            <div>
                <div class="adjust-d4 subtract-d4" data-type="banes" data-adjustment="subtract"><i class="fa-solid fa-minus"></i></div>
                <div>{{banes}} <i class="fa-regular fa-dice-d4"></i></div>
                <div class="adjust-d4 add-d4" data-type="banes" data-adjustment="add"><i class="fa-solid fa-plus"></i></div>
            </div>
        </div>
    </div>

    <button class="roll-button">{{constructedFormula}} {{damageType}}</button>
</div>
