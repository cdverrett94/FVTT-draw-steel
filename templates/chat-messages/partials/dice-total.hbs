<h4 class='dice-total {{ifThen @root.context.critical "success" ""}}'>
    <span class='dice-modifier'>
        {{ifThen (gte (add roll.modifier roll.modifiers.bonuses) 0) '+' ''}}{{add roll.modifier roll.modifiers.bonuses}}
    </span>

    {{roll.total}}

    <span class='dice-tier {{ifThen roll.modifiedTier (concat "tier-modified-" roll.modifierType) ""}}'>
        {{localize 'system.items.ability.FIELDS.power.tiers.singular'}}
        {{roll.tier}}
        {{#if roll.modifiedTier}}
            <span class='tier-modified-info' data-tooltip='{{localize (concat "system.chat.ability.modifiedTier." roll.modifierType ".label")}}'>
                <i class='fa-solid fa-circle-info'></i>
            </span>
        {{/if}}
    </span>
</h4>