<div class='actor'>
    <div class='image'><img src='{{actor.img}}' /></div>
    <div class='name'>{{actor.name}}</div>
</div>

<div class='draw-steel-header'>{{title}}</div>
<div class='dice-roll'>
    {{#if roll.flavor}}
        <div class='dice-flavor'>{{roll.flavor}}</div>
    {{/if}}
    <div class='dice-result'>
        <div class='dice-formula'>{{roll.formula}}</div>
        {{{roll.options.tooltip}}}
        {{> 'systems/draw-steel/templates/chat-messages/partials/dice-total.hbs' roll=roll}}
    </div>
</div>