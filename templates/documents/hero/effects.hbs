<div class="mcdmrpg-header">Conditions</div>
<div class='conditions'>
    {{#each conditionsList as |condition|}}
        <div class='condition'>
            <div>{{localize condition.name}}</div>
            <div class='toggle-condition' data-condition-id='{{condition.id}}'>
                {{#if (or (eq condition.id 'ongoingdamage') (eq condition.id 'taunted') (eq condition.id 'frightened'))}}
                    <i class="fa-regular fa-pencil" data-tooltip="Edit {{localize condition.name}}"></i>
                {{else}}
                    {{#if (includes ../actor.effects condition._id)}}
                        <i class='fa-solid fa-toggle-on' data-tooltip="Toggle {{localize condition.name}}"></i>
                    {{else}}
                        <i class='fa-solid fa-toggle-off' data-tooltip="Toggle {{localize condition.name}}"></i>
                    {{/if}}
                {{/if}}
            </div>
            <div class="condition-values">
                {{#if (eq condition.id 'ongoingdamage')}}
                    {{#each ../actor.system.ongoingDamage as |value|}}
                        {{#unless (eq value 0)}}
                            {{@key}} - {{value}}
                        {{/unless}}
                    {{/each}}
                {{/if}}
            </div>
        </div>
    {{/each}}
</div>
