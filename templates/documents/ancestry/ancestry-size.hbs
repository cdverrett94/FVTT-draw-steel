    {{formField fields.size.fields.width value=source.system.size.width localize=true classes='ancestry-width'}}
    {{formField fields.size.fields.length value=source.system.size.length localize=true classes='ancestry-length'}}
    {{formField fields.size.fields.height value=source.system.size.height localize=true classes='ancestry-height'}}
    {{formField fields.size.fields.weight value=source.system.size.weight localize=true classes='ancestry-weight'}}
</fieldset>