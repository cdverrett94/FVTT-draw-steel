<div class="header">
    <div class="portrait" data-action="editPortrait" data-tooltip="Edit Portrait">
            <img src='{{actor.img}}' />
    </div>

    <div class='character-info'>
        <div class="name">{{formInput actor.schema.fields.name value=actor.name localize=true}}</div>
        <div class="level">
            <div class="value">{{formInput fields.level value=actor.system.level}}</div>
            <div class="label">{{fields.level.label}}</div>
        </div>
        <div class="xp">
            <div class="value">{{formInput fields.xp value=actor.system.xp}}</div>
            <div class="label">{{fields.xp.label}}</div>
        </div>
    </div>

    {{> 'systems/mcdmrpg/templates/documents/actor/partials/tabs.hbs'}}
</div>
