<fieldset class='ability-damage'>
    <legend>{{fields.damage.label}}</legend>
    {{formField fields.damage.fields.doesDamage value=item.system.damage.doesDamage classes='damage-applies'}}

    {{#if item.system.damage.doesDamage}}
        {{formField fields.damage.fields.baseFormula value=item.system.damage.baseFormula classes='base-damage'}}
        {{formField fields.damage.fields.characteristic value=item.system.damage.characteristic classes='damage-characteristic'}}
        {{formField fields.damage.fields.applyExtraDamage value=item.system.damage.applyExtraDamage classes='damage-extra'}}
        {{formField fields.damage.fields.boons value=item.system.damage.boons classes='damage-boons'}}
        {{formField fields.damage.fields.banes value=item.system.damage.banes classes='damage-banes'}}
        {{formField fields.damage.fields.impacts value=item.system.damage.impacts classes='damage-impacts'}}
        {{formField fields.damage.fields.type value=item.system.damage.type classes='damage-type' labelAttr='label'}}
    {{/if}}
</fieldset>