<form>
    <div class="actor-sheet">
        <div class="sidebar">{{> "systems/mcdmrpg/templates/documents/actors/hero/partials/sidebar.hbs"}}</div>
        <div class="main-content">
            <div class="content-header">{{> "systems/mcdmrpg/templates/documents/actors/hero/partials/header.hbs"}}</div>
            <div class="content-body">
                <div class="skills">
                    <div class="mcdmrpg-header">
                        Skills
                        <span class="edit-skills">
                            <i class="fa-regular fa-pencil" data-tooltip="Edit {{localize skills.label.plural}}"></i>
                        </span>
                    </div>

                    <div class="skill-list">
                        {{#each skills as |skill|}} 
                            {{#if (or (eq @key "craft") (eq @key "knowledge"))}} 
                                {{#each skill as |subskill| }} 
                                    {{> "systems/mcdmrpg/templates/documents/actors/hero/partials/skills.hbs" 
                                    skillData=subskill skill=subskill.subskill characteristics=../../characteristics 
                                    prefix=@../key index=@index special=true}} 
                                {{/each}} 
                            {{else}} 
                                {{> "systems/mcdmrpg/templates/documents/actors/hero/partials/skills.hbs" 
                                skillData=this skill=@key characteristics=../characteristics}}
                            {{/if}} 
                        {{/each}}
                    </div>
                </div>
                <div class="tabbed-content">
                    <div class="sheet-tabs">
                        <a class="nav-tab" data-tab="abilities">Abilities</a>
                        <a class="nav-tab" data-tab="notes">Notes</a>
                        <a class="nav-tab" data-tab="effects">Effects</a>
                    </div>
                    <div class="tab" data-tab="abilities">
                        <div class="hero-abilities actor-abilities">
                            <div class="mcdmrpg-header">Abilities <span class="add-ability">Add New Ability</span></div>
                            <div class="abilities-filter">
                                {{> 'systems/mcdmrpg/templates/documents/actors/base/partials/abilities-filter.hbs'}}
                            </div>
                            <div class="abilities-list">
                                {{> 'systems/mcdmrpg/templates/documents/actors/base/partials/abilities.hbs'}}
                            </div>
                        </div>
                    </div>
                    <div class="tab" data-tab="notes"></div>
                    <div class="tab effects-tab" data-tab="effects">
                        {{> 'systems/mcdmrpg/templates/documents/actors/hero/partials/effects.hbs'}}
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</form>
