<div class="portrait"><img src="{{img}}" data-tooltip="{{name}}" data-edit="img" /></div>

<div class="ancestry" data-type="ancestry">Ancestry: {{ancestry.name}}</div>
<div class="kit" data-type="kit">Kit: {{kit.name}}</div>
<div class="class" data-type="class">Class: {{class.name}}</div>
<div class="change-hit">Chance Hit: {{{chanceHit}}}</div>

<div class="hp">
    <div class="mcdmrpg-header">Health</div>
    <div class="hp-values">
        <div class="current">
            <input type="number" name="system.hp.current" value="{{hp.current}}" />
        </div>
        <div class="other-hp">
            <div class="max">
                <div>Max</div>
                <div><input type="number" name="system.hp.max" value="{{hp.max}}" /></div>
            </div>
            <div class="bloodied">
                <div>Bloodied</div>
                <div>{{hp.bloodied}}</div>
            </div>
        </div>
    </div>
</div>

<div class="size">
    <div class="mcdmrpg-header">Size</div>
    <div class="size-values">
        <div class="width">Size: {{size.width}}</div>
        <div class="weight">Weight: {{size.weight}}</div>
        <div class="speed">Speed: {{speed}}</div>
        <div class="reach">Reach: {{reach}}</div>
        <div class="grapple-tn">GP/KB TN: {{grappleTN}}</div>
    </div>
</div>

<div class="victories">
    <div class="mcdmrpg-header">
        Victories
        <span class="resources-info" data-tooltip="{{class.system.victoryBenefits}}" data-tooltip-direction="UP"><i class="fa-solid fa-question"></i></span>
    </div>
    <input type="number" name="system.victories" value="{{victories}}" />
</div>

<div class="recoveries">
    <div class="mcdmrpg-header">Recoveries</div>
    <div class="recoveries-values">
        <div class="current">
            <input type="number" name="system.recoveries.current" value="{{recoveries.current}}" />
        </div>
        <div class="other-recoveries">
            <div class="max">
                <div>Max</div>
                <div><input type="number" name="system.recoveries.max" value="{{recoveries.max}}" /></div>
            </div>
            <div class="healing">
                <div>Healing Value</div>
                <div>{{hp.healing}}</div>
            </div>
        </div>
    </div>
</div>

<div class="resources">
    <div class="mcdmrpg-header">
        Resources
        <span class="resources-info" data-tooltip="{{class.system.resourceGain}}" data-tooltip-direction="UP"><i class="fa-solid fa-question"></i></span>
    </div>
    {{#each resources as |resource|}}
    <div class="resource{{#if resource.max}} has-max{{/if}}">
        <div class="resource-current">
            <div class="resource-title"><input style="display: none" name="system.currentResources.{{@index}}.name" value="{{@key}}" />{{@key}}</div>
            <div class="resource-value"><input type="number" name="system.currentResources.{{@index}}.current" value="{{resource.current}}" /></div>
        </div>
        {{#if resource.max}}
        <div class="resource-max">
            <div class="resource-title">Max</div>
            <div class="resource-value">{{resource.max}}</div>
        </div>
        {{/if}}
    </div>
    {{/each}}
</div>
