<div class='header'>
    <div class='actor-basics'>
        <div class='portrait left'>
            <img src='{{actor.img}}' data-tooltip='{{actor.name}}' data-edit='img' />
        </div>
        <div class='right'>
            <div class='name'>{{formInput actor.schema.fields.name value=actor.name}}</div>
            <div class='role-and-level'>
                <div class='role'>
                    <select name='system.role' class='{{actor.system.role}}'>
                        {{selectOptions monsterRoles selected=actor.system.role labelAttr='label' localize=true}}
                    </select>
                </div>
                <div class='level property'>
                    <div class='label'>{{localize fields.level.label}}</div>
                    <div class='value'>{{formInput fields.level value=actor.system.level}}</div>
                </div>
            </div>
        </div>
    </div>

    <div class='health-size'>
        <div class='health'>
            <div class='current-health'>
                <div class='label'>{{localize fields.hp.fields.current.label}}</div>
                <div class='value'>{{formInput fields.hp.fields.current value=actor.system.hp.current}}</div>
            </div>

            <div class='other-health'>
                <div class='bloodied'>
                    <div class='bloodied-icon'>
                        <i class='fa-solid fa-droplet'></i>
                        <i class='fa-solid fa-droplet'></i>
                        <i class='fa-solid fa-droplet'></i>
                    </div>
                    <div class='bloodied-value'>{{actor.system.hp.bloodied}}</div>
                </div>
                <div class='max-health'>
                    <div class='label'>{{localize fields.hp.fields.max.label}}</div>
                    <div class='value'>{{formInput fields.hp.fields.max value=actor.system.hp.max}}</div>
                </div>

            </div>
        </div>

        <div class='size'>
            <div class='size property'>
                <div class='label'>{{localize 'system.sheets.actor.size.label'}}</div>
                <div class='value'>
                    <div class='width'>{{formInput fields.size.fields.width value=actor.system.size.width}}</div>
                    <div class='separator'>x</div>
                    <div class='length'>{{formInput fields.size.fields.length value=actor.system.size.length}}</div>
                </div>
            </div>

            <div class='speed property'>
                <div class='label'>{{localize fields.speed.label}}</div>
                <div class='value'>{{formInput fields.speed value=actor.system.speed}}</div>
            </div>

            <div class='weight property'>
                <div class='label'>{{localize fields.size.fields.weight.label}}</div>
                <div class='value'>{{formInput fields.size.fields.weight value=actor.system.size.weight}}</div>
            </div>

            <div class='reach property'>
                <div class='label'>{{localize fields.reach.label}}</div>
                <div class='value'>{{formInput fields.reach value=actor.system.reach}}</div>
            </div>

            <div class='bonus-damage property'>
                <div class='label'>{{localize fields.bonusDamage.label}}</div>
                <div class='value'>{{formInput fields.bonusDamage value=actor.system.bonusDamage}}</div>
            </div>

            <div class='bonus-tn property'>
                <div class='label'>{{localize fields.bonusTN.label}}</div>
                <div class='value'>{{formInput fields.bonusTN value=actor.system.bonusTN}}</div>
            </div>

            <div class='grapple-tn'>
                <div class='label'>
                    <div class='grapple-knockback'>
                        <div class='grapple'>{{localize 'system.sheets.actor.grapple'}}</div>
                        <div class='knockback'>{{localize 'system.sheets.actor.knockback'}}</div>
                    </div>
                    <div class='tn-text'>{{localize 'system.sheets.actor.tn'}}</div>
                </div>
                <div class='value'>{{actor.system.grappleTN}}</div>
            </div>
        </div>
    </div>
</div>