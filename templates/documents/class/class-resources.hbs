<fieldset class='class-resources'>
    <legend>{{localize 'system.items.class.FIELDS.resources.label'}}</legend>
    <div class='class-resource-list'>
        {{#each source.system.resources as |resource|}}
            <div class='class-resource'>
                {{formField
                    @root.fields.resources.element.fields.name
                    name=(concat 'system.resources.' @index '.name')
                    value=resource.name
                    localize=true
                    classes='resource-name'
                    placeholder='Resource Name'
                }}
                {{formField
                    @root.fields.resources.element.fields.max
                    name=(concat 'system.resources.' @index '.max')
                    value=resource.max
                    localize=true
                    classes='resource-max'
                    placeholder='Resource Maximum'
                }}

                <div class='delete-class-resource' data-action='deleteResource' data-resource-index='{{@index}}'>
                    <i class='fa-solid fa-trash' data-tooltip-direction='RIGHT' data-tooltip='{{localize "system.sheets.items.class.deleteResource"}}'></i>
                </div>
            </div>
        {{/each}}
    </div>
    <div><button data-action='addResource' class='add-class-resource'>{{localize 'system.sheets.items.class.addResource'}}</button></div>
</fieldset>